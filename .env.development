# SmartDine SaaS Platform - Development Environment
# This file contains development-specific configuration

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

VITE_APP_ENV=development
VITE_APP_NAME=SmartDine Dev
VITE_APP_URL=http://localhost:5173

# =============================================================================
# API CONFIGURATION
# =============================================================================

VITE_API_BASE_URL=http://localhost:3000/api/v1
VITE_API_TIMEOUT=30000

# =============================================================================
# AUTHENTICATION
# =============================================================================

VITE_AUTH_TOKEN_KEY=smartdine_auth_token
VITE_SESSION_TIMEOUT=60

# =============================================================================
# FEATURES FLAGS
# =============================================================================

VITE_FEATURE_AI_ASSISTANT=true
VITE_FEATURE_AR_MENU=true
VITE_FEATURE_ANALYTICS=true
VITE_FEATURE_MULTI_LANGUAGE=true
VITE_FEATURE_DARK_MODE=true

# =============================================================================
# AI CONFIGURATION
# =============================================================================

# OpenAI API Key for AI Assistant
VITE_OPENAI_API_KEY=your-openai-api-key-here
VITE_AI_MODEL=gpt-4
VITE_AI_MAX_TOKENS=500
VITE_AI_TEMPERATURE=0.7

# =============================================================================
# STORAGE & CDN
# =============================================================================

VITE_CDN_URL=http://localhost:3000/static
VITE_STORAGE_URL=http://localhost:3000/uploads
VITE_MAX_UPLOAD_SIZE=5242880
VITE_MAX_MODEL_SIZE=10485760

# =============================================================================
# PAYMENT GATEWAY
# =============================================================================

# Use Stripe test keys for development
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_placeholder
VITE_PAYPAL_CLIENT_ID=paypal_sandbox_placeholder

# =============================================================================
# MAPS & LOCATION
# =============================================================================

VITE_GOOGLE_MAPS_API_KEY=dev_maps_key_placeholder

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================

VITE_GA_MEASUREMENT_ID=
VITE_SENTRY_DSN=
VITE_DEBUG_MODE=true

# =============================================================================
# WEBSOCKET CONFIGURATION
# =============================================================================

VITE_WS_URL=ws://localhost:3000
VITE_WS_RECONNECT_ATTEMPTS=5
VITE_WS_RECONNECT_DELAY=3000

# =============================================================================
# LOCALIZATION
# =============================================================================

VITE_DEFAULT_LANGUAGE=en
VITE_SUPPORTED_LANGUAGES=en,ar

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================

VITE_CACHE_MENU_TTL=3600
VITE_CACHE_RESTAURANT_TTL=3600

# =============================================================================
# RATE LIMITING
# =============================================================================

VITE_RATE_LIMIT=1000

# =============================================================================
# SUBSCRIPTION PLANS
# =============================================================================

VITE_PLAN_BASIC_PRICE=29
VITE_PLAN_PRO_PRICE=99
VITE_PLAN_ENTERPRISE_PRICE=299

# =============================================================================
# SOCIAL MEDIA & MARKETING
# =============================================================================

VITE_FACEBOOK_APP_ID=
VITE_TWITTER_HANDLE=@smartdine

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================

VITE_ENABLE_REACT_QUERY_DEVTOOLS=true
VITE_ENABLE_REDUX_DEVTOOLS=true
VITE_MOCK_API=false
