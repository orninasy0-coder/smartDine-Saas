# SmartDine SaaS Platform - Production Environment
# This file contains production-specific configuration
# IMPORTANT: Replace all placeholder values with actual production credentials

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

VITE_APP_ENV=production
VITE_APP_NAME=SmartDine
VITE_APP_URL=https://smartdine.com

# =============================================================================
# API CONFIGURATION
# =============================================================================

VITE_API_BASE_URL=https://api.smartdine.com/api/v1
VITE_API_TIMEOUT=30000

# =============================================================================
# AUTHENTICATION
# =============================================================================

VITE_AUTH_TOKEN_KEY=smartdine_auth_token
VITE_SESSION_TIMEOUT=60

# =============================================================================
# FEATURES FLAGS
# =============================================================================

VITE_FEATURE_AI_ASSISTANT=true
VITE_FEATURE_AR_MENU=true
VITE_FEATURE_ANALYTICS=true
VITE_FEATURE_MULTI_LANGUAGE=true
VITE_FEATURE_DARK_MODE=true

# =============================================================================
# AI CONFIGURATION
# =============================================================================

# IMPORTANT: Use production OpenAI API key
VITE_OPENAI_API_KEY=your_production_openai_api_key_here
VITE_AI_MODEL=gpt-4
VITE_AI_MAX_TOKENS=500

# =============================================================================
# STORAGE & CDN
# =============================================================================

VITE_CDN_URL=https://cdn.smartdine.com
VITE_STORAGE_URL=https://storage.smartdine.com
VITE_MAX_UPLOAD_SIZE=5242880
VITE_MAX_MODEL_SIZE=10485760

# =============================================================================
# PAYMENT GATEWAY
# =============================================================================

# IMPORTANT: Use production payment gateway keys
VITE_STRIPE_PUBLISHABLE_KEY=pk_live_your_production_stripe_key_here
VITE_PAYPAL_CLIENT_ID=your_production_paypal_client_id_here

# =============================================================================
# MAPS & LOCATION
# =============================================================================

VITE_GOOGLE_MAPS_API_KEY=your_production_google_maps_api_key_here

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================

VITE_GA_MEASUREMENT_ID=G-PRODUCTION_ID
VITE_SENTRY_DSN=https://your_production_sentry_dsn_here
VITE_DEBUG_MODE=false

# =============================================================================
# WEBSOCKET CONFIGURATION
# =============================================================================

VITE_WS_URL=wss://api.smartdine.com
VITE_WS_RECONNECT_ATTEMPTS=5
VITE_WS_RECONNECT_DELAY=3000

# =============================================================================
# LOCALIZATION
# =============================================================================

VITE_DEFAULT_LANGUAGE=en
VITE_SUPPORTED_LANGUAGES=en,ar

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================

VITE_CACHE_MENU_TTL=3600
VITE_CACHE_RESTAURANT_TTL=3600

# =============================================================================
# RATE LIMITING
# =============================================================================

VITE_RATE_LIMIT=100

# =============================================================================
# SUBSCRIPTION PLANS
# =============================================================================

VITE_PLAN_BASIC_PRICE=29
VITE_PLAN_PRO_PRICE=99
VITE_PLAN_ENTERPRISE_PRICE=299

# =============================================================================
# SOCIAL MEDIA & MARKETING
# =============================================================================

VITE_FACEBOOK_APP_ID=your_production_facebook_app_id_here
VITE_TWITTER_HANDLE=@smartdine

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================

VITE_ENABLE_REACT_QUERY_DEVTOOLS=false
VITE_ENABLE_REDUX_DEVTOOLS=false
VITE_MOCK_API=false
