# SmartDine SaaS Platform - Environment Variables Template
# Copy this file to .env.development or .env.production and fill in the values

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Application Environment (development, staging, production)
VITE_APP_ENV=development

# Application Name
VITE_APP_NAME=SmartDine

# Application URL (used for redirects, emails, etc.)
VITE_APP_URL=http://localhost:5173

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Backend API Base URL
VITE_API_BASE_URL=http://localhost:3000/api/v1

# API Timeout (milliseconds)
VITE_API_TIMEOUT=30000

# =============================================================================
# AUTHENTICATION
# =============================================================================

# JWT Token Storage Key
VITE_AUTH_TOKEN_KEY=smartdine_auth_token

# Session Timeout (minutes)
VITE_SESSION_TIMEOUT=60

# =============================================================================
# FEATURES FLAGS
# =============================================================================

# Enable AI Assistant Feature
VITE_FEATURE_AI_ASSISTANT=true

# Enable AR 3D Menu Feature
VITE_FEATURE_AR_MENU=true

# Enable Analytics Feature
VITE_FEATURE_ANALYTICS=true

# Enable Multi-language Support
VITE_FEATURE_MULTI_LANGUAGE=true

# Enable Dark Mode
VITE_FEATURE_DARK_MODE=true

# =============================================================================
# AI CONFIGURATION
# =============================================================================

# OpenAI API Key (for AI Assistant)
# Get your API key from: https://platform.openai.com/api-keys
VITE_OPENAI_API_KEY=your_openai_api_key_here

# AI Model to use (gpt-4, gpt-3.5-turbo, etc.)
VITE_AI_MODEL=gpt-4

# AI Max Tokens (maximum length of AI response)
VITE_AI_MAX_TOKENS=500

# AI Temperature (0.0 - 2.0, higher = more creative)
VITE_AI_TEMPERATURE=0.7

# =============================================================================
# STORAGE & CDN
# =============================================================================

# CDN Base URL for static assets
VITE_CDN_URL=https://cdn.smartdine.com

# S3/Cloud Storage Bucket URL
VITE_STORAGE_URL=https://storage.smartdine.com

# Max Upload Size (bytes) - 5MB default
VITE_MAX_UPLOAD_SIZE=5242880

# Max 3D Model Size (bytes) - 10MB default
VITE_MAX_MODEL_SIZE=10485760

# =============================================================================
# PAYMENT GATEWAY
# =============================================================================

# Stripe Publishable Key
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key_here

# PayPal Client ID
VITE_PAYPAL_CLIENT_ID=your_paypal_client_id_here

# =============================================================================
# MAPS & LOCATION
# =============================================================================

# Google Maps API Key (for delivery tracking)
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================

# Google Analytics Measurement ID (GA4)
# Get from: https://analytics.google.com/
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# PostHog API Key (Alternative to Google Analytics)
# Get from: https://app.posthog.com/
VITE_POSTHOG_API_KEY=phc_xxxxxxxxxxxxx

# PostHog API Host (optional, defaults to https://app.posthog.com)
VITE_POSTHOG_API_HOST=https://app.posthog.com

# Sentry DSN (Error Tracking)
VITE_SENTRY_DSN=https://your_sentry_dsn_here

# Enable Debug Mode
VITE_DEBUG_MODE=false

# =============================================================================
# WEBSOCKET CONFIGURATION
# =============================================================================

# WebSocket Server URL (for real-time updates)
VITE_WS_URL=ws://localhost:3000

# WebSocket Reconnect Attempts
VITE_WS_RECONNECT_ATTEMPTS=5

# WebSocket Reconnect Delay (milliseconds)
VITE_WS_RECONNECT_DELAY=3000

# =============================================================================
# LOCALIZATION
# =============================================================================

# Default Language (en, ar)
VITE_DEFAULT_LANGUAGE=en

# Supported Languages (comma-separated)
VITE_SUPPORTED_LANGUAGES=en,ar

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================

# Cache TTL for menu data (seconds)
VITE_CACHE_MENU_TTL=3600

# Cache TTL for restaurant data (seconds)
VITE_CACHE_RESTAURANT_TTL=3600

# =============================================================================
# RATE LIMITING
# =============================================================================

# API Rate Limit (requests per minute)
VITE_RATE_LIMIT=100

# =============================================================================
# SUBSCRIPTION PLANS
# =============================================================================

# Basic Plan Price (monthly)
VITE_PLAN_BASIC_PRICE=29

# Pro Plan Price (monthly)
VITE_PLAN_PRO_PRICE=99

# Enterprise Plan Price (monthly)
VITE_PLAN_ENTERPRISE_PRICE=299

# =============================================================================
# SOCIAL MEDIA & MARKETING
# =============================================================================

# Facebook App ID
VITE_FACEBOOK_APP_ID=your_facebook_app_id_here

# Twitter Handle
VITE_TWITTER_HANDLE=@smartdine

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================

# Enable React Query Devtools
VITE_ENABLE_REACT_QUERY_DEVTOOLS=true

# Enable Redux Devtools
VITE_ENABLE_REDUX_DEVTOOLS=true

# Mock API Responses (for development)
VITE_MOCK_API=false
